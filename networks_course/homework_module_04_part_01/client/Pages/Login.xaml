<Page x:Class="client.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" Background="White">

    <Grid>
        <!-- Username Input -->
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Margin="0,0,0,250" FontSize="16"/>
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Center" Text="" VerticalAlignment="Center" Width="220" Margin="0,0,0,200" FontSize="16" VerticalContentAlignment="Center"/>
        <!-- Password Input -->
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Margin="0,0,0,150" FontSize="16"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Margin="0,0,0,100" FontSize="16" VerticalContentAlignment="Center"/>
        <!-- Instance Input -->
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Instance" VerticalAlignment="Center" FontSize="16" Margin="0,0,0,50"/>
        <TextBox x:Name="HostnameInput" HorizontalAlignment="Center" Text="127.0.0.1" VerticalAlignment="Center" Width="145" FontSize="16" MaxLines="1" VerticalContentAlignment="Center" Margin="0,0,75,0"/>
        <TextBox x:Name="PortInput" HorizontalAlignment="Center" Text="6969" VerticalAlignment="Center" Width="65" FontSize="16" MaxLines="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="155,0,0,0" MaxLength="6"/>
        
        <TextBlock x:Name="HintMessage" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Margin="0,200,0,0"/>
        <Button x:Name="SignInButton" Content="Sign In" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="SignInButton_Click" FontSize="16" Margin="0,100,0,0" />

    </Grid>
</Page>
