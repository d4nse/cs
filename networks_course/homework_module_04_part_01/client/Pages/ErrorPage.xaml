<Page x:Class="client.Pages.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnectionError">

    <Grid Background="White">
        <TextBlock x:Name="ErrorTitle" TextWrapping="Wrap" Text="Title" VerticalAlignment="Center" Margin="0,0,0,200" FontSize="24" TextAlignment="Center"/>
        <TextBox x:Name="ErrorMessage" TextWrapping="Wrap" Text="An error occured" VerticalAlignment="Top" Margin="0,160,0,0" TextAlignment="Center" HorizontalAlignment="Center" Width="400" IsReadOnly="True" FontSize="16" BorderThickness="0,0,0,0"/>
        <Button x:Name="RetryButton" Content="Retry" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Margin="0,300,0,0" Click="RetryButton_Click"/>

    </Grid>
</Page>
