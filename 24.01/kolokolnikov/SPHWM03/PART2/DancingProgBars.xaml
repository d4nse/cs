<Window x:Class="PART2.DancingProgBars"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PART2"
        mc:Ignorable="d"
        Title="DancingProgBars" Height="450" Width="422">
    <Grid>
        <StackPanel x:Name="stackPanel" VerticalAlignment="Top" Height="313" Margin="0,121,0,0" Orientation="Horizontal" Background="#FFE8E8E8"/>
        <TextBox x:Name="barsCountBox" HorizontalAlignment="Left" Margin="27,61,0,0" TextWrapping="Wrap" Text="15" VerticalAlignment="Top" Width="150" Height="40" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Number of Bars" HorizontalAlignment="Left" Margin="27,25,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Margin="187,60,0,0" VerticalAlignment="Top" Height="40" Width="87" Click="startBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="294,61,0,0" VerticalAlignment="Top" Height="40" Width="87" Click="stopBtn_Click" IsEnabled="False"/>

    </Grid>
</Window>
