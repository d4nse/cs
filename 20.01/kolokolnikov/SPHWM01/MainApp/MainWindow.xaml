<Window x:Name="MainApp" x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Title="MainApp" Height="250" Width="250" HorizontalAlignment="Center" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Background="White">
    <Grid Width="250" Height="250">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="task1button" Content="Task 1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="100" Width="100" Click="task1button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="task2button" Content="Task 2" HorizontalAlignment="Left" Margin="71,10,0,0" VerticalAlignment="Top" Height="100" Width="100" Click="task2button_Click" Grid.Column="1"/>
        <Button x:Name="task3button" Content="Task 3" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Height="100" Width="100" Click="task3button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="task4button" Content="Task 4" HorizontalAlignment="Left" Margin="71,125,0,0" VerticalAlignment="Top" Height="100" Width="100" Click="task4button_Click" Grid.Column="1"/>

    </Grid>
</Window>
