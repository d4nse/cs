<Window x:Class="DupCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="492" Width="800">
    <Grid>
        <Button x:Name="chooseDirsButton" Content="Choose Directories" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50" Width="267" FontSize="16" Click="chooseDirsButton_Click"/>
        <TextBox x:Name="chosenDirsBox" HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" Height="346" IsReadOnly="True"/>
        <Button x:Name="checkButton" Content="Check" HorizontalAlignment="Left" Margin="296,10,0,0" VerticalAlignment="Top" Height="50" Width="267" FontSize="16" Click="checkButton_Click" IsEnabled="False"/>
        <TextBox x:Name="outputBox" HorizontalAlignment="Left" Margin="296,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="494" Height="346" IsReadOnly="True"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="22" Margin="0,416,0,0" VerticalAlignment="Top" Width="780"/>

    </Grid>
</Window>
