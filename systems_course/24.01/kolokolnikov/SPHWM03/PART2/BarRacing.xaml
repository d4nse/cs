<Window x:Class="PART2.BarRacing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="400" Width="300">
    <Grid>
        <StackPanel x:Name="stackPanel" VerticalAlignment="Top" Margin="10" Height="300">
        </StackPanel>

        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="10" Click="startBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="10" IsEnabled="False" Click="stopBtn_Click"/>
    </Grid>
</Window>
